{
	"extends": ["@tsconfig/strictest/tsconfig", "@tsconfig/node20/tsconfig"],
	"include": ["./src/**/*.ts"],
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "dist",
		"incremental": true,
		"noImplicitReturns": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noPropertyAccessFromIndexSignature": false,
		"removeComments": true
	}
}
