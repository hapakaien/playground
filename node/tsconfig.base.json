{
	"extends": "@tsconfig/node16-strictest/tsconfig.json",
	"include": ["./src/**/*.ts"],
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "dist",
		"incremental": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noPropertyAccessFromIndexSignature": false,
		"removeComments": true,
		"typeRoots": [
			"./src/infrastructure/express/types",
			"./src/infrastructure/express/node_modules/@types",
			"./src/infrastructure/fastify/types",
			"./src/infrastructure/fastify/node_modules/@types",
			"./node_modules/@types"
		]
	}
}
